    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            قطاع نظم المعلومات و الخدمات الذكيه <a asp-area=""></a>
        </div>
    </footer>

